<%- include('../includes/head.ejs') %>

        <link rel="stylesheet" href="/css/add-product.css" />
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        
        <main>
            <form action="/admin/<% if (editing) { %>edit-product<% } else { %>product<% } %>" method="POST">
                <% if (editing) { %>
                    <input type="hidden" name="productId" value="<%= product.id %>" />
                <% } %>
                <input type="text" name='title' placeholder="Title" value="<% if (editing) { %> <%= product.title %> <% } %> " />
                <input type="text" name='imgUrl' placeholder="ImageUrl" value="<% if (editing) { %> <%= product.imgUrl %> <% } %> "  />
                <input type="text" name='description' placeholder="Description" value="<% if (editing) { %> <%= product.description %> <% } %> "   />
                <input type="number" name='price' step="0.01" placeholder="Price" value="<% if (editing) { %> <%= product.price %> <% } %> " />
                <button class="btn" type="submit"><% if(editing) { %> Update Product <% } else { %> Add Product <% } %> </button>
            </form>
        </main>
        
<%- include('../includes/end.ejs') %>